@model Lojinha.Core.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="row">
    <div class="col-md-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>@Model.Nome</h2>
                <img src="@Model.ImagemPrincipalUrl" class="img-thumbnail" />
            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    @Model.Preco.ToString("c2")
                </div>
                <div class="col-md-6">
                    <button class="btn btn-success" data-id="@Model.Id">
                        Adicionar
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $(".btn-success").click(function () {
                var id = $(this).data("id");

                $.post('/Carrinho/Add', { id: id }, function (data) {
                    $(".carrinho-placeholder").html(data);
                });
            });
        })
    </script>
}